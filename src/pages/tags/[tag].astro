---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { normalizeTag, collectUniqueTags, filterPostsByTag } from "@utils/tags";

export async function getStaticPaths() {
  const allPosts = await getCollection("blog");
  const uniqueTags = collectUniqueTags(allPosts);
  const uniqueSlugs = [...new Set(uniqueTags.map((t) => normalizeTag(t)))];

  return uniqueSlugs.map((tag) => {
    const filteredPosts = filterPostsByTag(allPosts, tag);
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout pageTitle={tag}>
  {
    (() => {
      const label = posts?.[0]?.data?.tags?.find((t) => normalizeTag(t) === tag) ?? tag;
      return <p>Posts tagged with {label}</p>;
    })()
  }
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={`/blog/${post.slug}`}>{post.data.title}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
