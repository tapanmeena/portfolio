---
import { Search, X, Clock, Trash2, FileText, FolderKanban } from "@lucide/astro";
---

<!-- Search Modal -->
<div id="search-modal" class="search-modal" aria-hidden="true" role="dialog" aria-modal="true" aria-labelledby="search-modal-title">
  <div class="search-backdrop" id="search-backdrop"></div>

  <div class="search-container">
    <!-- Header -->
    <div class="search-header">
      <div class="search-input-wrapper">
        <Search size={20} class="search-icon" />
        <input type="text" id="search-input" class="search-input" placeholder="Search posts and projects..." autocomplete="off" aria-label="Search" />
        <kbd class="search-kbd">ESC</kbd>
      </div>
      <button id="search-close" class="search-close" aria-label="Close search">
        <X size={20} />
      </button>
    </div>

    <!-- Filters -->
    <div class="search-filters">
      <button class="filter-btn active" data-filter="all">All</button>
      <button class="filter-btn" data-filter="blog">
        <FileText size={14} />
        Blog
      </button>
      <button class="filter-btn" data-filter="project">
        <FolderKanban size={14} />
        Projects
      </button>
    </div>

    <!-- Results Container -->
    <div class="search-results" id="search-results">
      <!-- Recent Searches (shown when input is empty) -->
      <div id="recent-searches" class="recent-searches">
        <div class="recent-header">
          <span class="recent-title">
            <Clock size={14} />
            Recent Searches
          </span>
          <button id="clear-recent" class="clear-recent" aria-label="Clear recent searches">
            <Trash2 size={14} />
            Clear
          </button>
        </div>
        <ul id="recent-list" class="recent-list" style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 4px;">
        </ul>
      </div>

      <!-- Search Results -->
      <ul id="results-list" class="results-list" style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 4px;">
      </ul>

      <!-- No Results -->
      <div id="no-results" class="no-results hidden">
        <p>No results found for "<span id="search-query"></span>"</p>
        <p class="no-results-hint">Try different keywords or check the spelling</p>
      </div>

      <!-- Loading -->
      <div id="search-loading" class="search-loading hidden">
        <div class="loading-spinner"></div>
        <span>Loading search index...</span>
      </div>
    </div>

    <!-- Footer -->
    <div class="search-footer">
      <span class="search-hint">
        <kbd>↑</kbd><kbd>↓</kbd> to navigate
      </span>
      <span class="search-hint">
        <kbd>↵</kbd> to select
      </span>
      <span class="search-hint">
        <kbd>ESC</kbd> to close
      </span>
    </div>
  </div>
</div>

<script>
  import Fuse from "fuse.js";
  import type { FuseResult } from "fuse.js";
  import { fuseOptions, saveRecentSearch, getRecentSearches, clearRecentSearches, type SearchItem } from "@utils/search";

  // DOM Elements
  const modal = document.getElementById("search-modal")!;
  const backdrop = document.getElementById("search-backdrop")!;
  const input = document.getElementById("search-input") as HTMLInputElement;
  const closeBtn = document.getElementById("search-close")!;
  const resultsList = document.getElementById("results-list")!;
  const recentSearches = document.getElementById("recent-searches")!;
  const recentList = document.getElementById("recent-list")!;
  const clearRecentBtn = document.getElementById("clear-recent")!;
  const noResults = document.getElementById("no-results")!;
  const searchQuery = document.getElementById("search-query")!;
  const loadingEl = document.getElementById("search-loading")!;
  const filterBtns = document.querySelectorAll(".filter-btn");

  // State
  let searchIndex: SearchItem[] | null = null;
  let fuse: Fuse<SearchItem> | null = null;
  let currentFilter: "all" | "blog" | "project" = "all";
  let selectedIndex = -1;
  let debounceTimer: ReturnType<typeof setTimeout>;

  // Debounce function
  function debounce(fn: () => void, delay: number) {
    clearTimeout(debounceTimer);
    debounceTimer = setTimeout(fn, delay);
  }

  // Load search index
  async function loadSearchIndex() {
    if (searchIndex) return;

    loadingEl.classList.remove("hidden");
    try {
      const response = await fetch("/search-index.json");
      searchIndex = await response.json();
      fuse = new Fuse(searchIndex!, fuseOptions);
    } catch (error) {
      console.error("Failed to load search index:", error);
    } finally {
      loadingEl.classList.add("hidden");
    }
  }

  // Open modal
  function openModal() {
    modal.classList.add("open");
    modal.setAttribute("aria-hidden", "false");
    document.body.style.overflow = "hidden";
    loadSearchIndex();
    showRecentSearches();
    // Focus after a small delay to ensure modal is visible
    setTimeout(() => {
      input.focus();
    }, 50);
  }

  // Close modal
  function closeModal() {
    modal.classList.remove("open");
    modal.setAttribute("aria-hidden", "true");
    document.body.style.overflow = "";
    input.value = "";
    resultsList.innerHTML = "";
    selectedIndex = -1;
  }

  // Show recent searches
  function showRecentSearches() {
    const recent = getRecentSearches();
    if (recent.length === 0) {
      recentSearches.classList.add("hidden");
      return;
    }

    recentList.innerHTML = recent
      .map(
        (query, i) => `
        <li class="recent-item" data-index="${i}" style="display: flex; flex-direction: row; align-items: center; gap: 12px; padding: 12px 16px; color: var(--color-text); border-radius: 10px; cursor: pointer; border: 1px solid transparent;">
          <div class="recent-icon" style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center; background: var(--color-bg); border-radius: 8px; color: var(--color-muted); flex-shrink: 0;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
          </div>
          <span class="recent-query" style="flex: 1; font-size: 15px; font-weight: 450;">${escapeHtml(query)}</span>
          <svg class="recent-arrow" style="color: var(--color-muted); flex-shrink: 0;" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg>
        </li>
      `,
      )
      .join("");

    recentSearches.classList.remove("hidden");
    noResults.classList.add("hidden");
    resultsList.innerHTML = "";
  }

  // Escape HTML
  function escapeHtml(text: string): string {
    const div = document.createElement("div");
    div.textContent = text;
    return div.innerHTML;
  }

  // Perform search
  function performSearch(query: string) {
    if (!fuse || !query.trim()) {
      showRecentSearches();
      return;
    }

    recentSearches.classList.add("hidden");

    let results = fuse.search(query);

    // Apply filter
    if (currentFilter !== "all") {
      results = results.filter((r) => r.item.type === currentFilter);
    }

    if (results.length === 0) {
      resultsList.innerHTML = "";
      noResults.classList.remove("hidden");
      searchQuery.textContent = query;
      return;
    }

    noResults.classList.add("hidden");
    renderResults(results);
    selectedIndex = -1;
  }

  // Get meta info for result (category, tags, or techStack)
  function getResultMeta(item: SearchItem): string {
    const meta: string[] = [];
    if (item.category) meta.push(item.category);
    if (item.tags && item.tags.length > 0) meta.push(...item.tags.slice(0, 2));
    if (item.techStack && item.techStack.length > 0) meta.push(...item.techStack.slice(0, 2));
    return meta
      .slice(0, 3)
      .map(
        (m) =>
          `<span class="result-tag" style="display: inline-block; padding: 2px 8px; font-size: 11px; font-weight: 500; background: var(--color-bg); border: 1px solid var(--color-border); border-radius: 4px; color: var(--color-muted);">${escapeHtml(m)}</span>`,
      )
      .join("");
  }

  // Render results
  function renderResults(results: FuseResult<SearchItem>[]) {
    resultsList.innerHTML = results
      .map(
        (result, i) => `
        <li class="result-item" data-index="${i}" data-url="${result.item.url}" style="display: flex; flex-direction: row; align-items: center; gap: 12px; padding: 12px; border-radius: 8px; cursor: pointer;">
          <div class="result-icon ${result.item.type}" style="flex-shrink: 0; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; border-radius: 8px; background: ${result.item.type === "blog" ? "rgba(59, 130, 246, 0.1)" : "rgba(16, 185, 129, 0.1)"}; color: ${result.item.type === "blog" ? "#3b82f6" : "#10b981"};">
            ${result.item.type === "blog" ? '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/><path d="M14 2v4a2 2 0 0 0 2 2h4"/><path d="M10 9H8"/><path d="M16 13H8"/><path d="M16 17H8"/></svg>' : '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 5H4a2 2 0 0 0-2 2v1a2 2 0 0 0 2 2h2"/><path d="M6 14H4a2 2 0 0 0-2 2v1a2 2 0 0 0 2 2h2"/><path d="M10 3h10a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H10a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z"/><path d="M14 9h4"/><path d="M14 13h4"/></svg>'}
          </div>
          <div class="result-content" style="flex: 1; min-width: 0; display: flex; flex-direction: column; gap: 4px;">
            <div class="result-header" style="display: flex; flex-direction: row; align-items: center; gap: 8px; flex-wrap: wrap;">
              <span class="result-title" style="font-weight: 600; font-size: 14px; color: var(--color-text);">${escapeHtml(result.item.title)}</span>
              <span class="result-type ${result.item.type}" style="display: inline-block; padding: 2px 8px; font-size: 10px; font-weight: 600; border-radius: 4px; text-transform: uppercase; background: ${result.item.type === "blog" ? "rgba(59, 130, 246, 0.15)" : "rgba(16, 185, 129, 0.15)"}; color: ${result.item.type === "blog" ? "#3b82f6" : "#10b981"};">${result.item.type === "blog" ? "Blog" : "Project"}</span>
            </div>
            <span class="result-description" style="font-size: 13px; color: var(--color-muted); line-height: 1.4; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">${escapeHtml(result.item.description.slice(0, 100))}${result.item.description.length > 100 ? "..." : ""}</span>
            <div class="result-meta" style="display: flex; flex-direction: row; flex-wrap: wrap; gap: 6px; margin-top: 2px;">${getResultMeta(result.item)}</div>
          </div>
          <svg class="result-arrow" style="flex-shrink: 0; color: var(--color-muted);" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg>
        </li>
      `,
      )
      .join("");
  }

  // Navigate to result
  function navigateToResult(url: string, query: string) {
    if (query.trim()) {
      saveRecentSearch(query);
    }
    window.location.href = url;
  }

  // Update selected item
  function updateSelection(newIndex: number) {
    const items = resultsList.querySelectorAll(".result-item") as NodeListOf<HTMLElement>;
    if (items.length === 0) return;

    // Remove selection styling from all items and restore original styles
    items.forEach((item) => {
      item.classList.remove("selected");
      item.style.backgroundColor = "";

      // Determine item type from the icon class
      const icon = item.querySelector(".result-icon") as HTMLElement | null;
      const isBlog = icon?.classList.contains("blog");
      const accentColor = isBlog ? "#3b82f6" : "#10b981";
      const accentBg = isBlog ? "rgba(59, 130, 246, 0.1)" : "rgba(16, 185, 129, 0.1)";
      const typeBg = isBlog ? "rgba(59, 130, 246, 0.15)" : "rgba(16, 185, 129, 0.15)";

      // Restore child elements' original colors
      const title = item.querySelector(".result-title") as HTMLElement | null;
      const desc = item.querySelector(".result-description") as HTMLElement | null;
      const arrow = item.querySelector(".result-arrow") as HTMLElement | null;
      const tags = item.querySelectorAll(".result-tag") as NodeListOf<HTMLElement>;
      const type = item.querySelector(".result-type") as HTMLElement | null;

      if (title) title.style.color = "var(--color-text)";
      if (desc) desc.style.color = "var(--color-muted)";
      if (arrow) arrow.style.color = "var(--color-muted)";
      if (icon) {
        icon.style.backgroundColor = accentBg;
        icon.style.color = accentColor;
      }
      if (type) {
        type.style.backgroundColor = typeBg;
        type.style.color = accentColor;
        type.style.borderColor = "";
      }
      tags.forEach((tag) => {
        tag.style.backgroundColor = "var(--color-bg)";
        tag.style.color = "var(--color-muted)";
        tag.style.borderColor = "var(--color-border)";
      });
    });

    if (newIndex >= 0 && newIndex < items.length) {
      selectedIndex = newIndex;
      const selectedItem = items[selectedIndex];
      selectedItem.classList.add("selected");
      selectedItem.style.backgroundColor = "var(--color-accent)";

      // Style child elements for selected state
      const title = selectedItem.querySelector(".result-title") as HTMLElement | null;
      const desc = selectedItem.querySelector(".result-description") as HTMLElement | null;
      const arrow = selectedItem.querySelector(".result-arrow") as HTMLElement | null;
      const icon = selectedItem.querySelector(".result-icon") as HTMLElement | null;
      const tags = selectedItem.querySelectorAll(".result-tag") as NodeListOf<HTMLElement>;
      const type = selectedItem.querySelector(".result-type") as HTMLElement | null;

      if (title) title.style.color = "white";
      if (desc) desc.style.color = "rgba(255, 255, 255, 0.9)";
      if (arrow) arrow.style.color = "white";
      if (icon) {
        icon.style.backgroundColor = "rgba(255, 255, 255, 0.2)";
        icon.style.color = "white";
      }
      if (type) {
        type.style.backgroundColor = "rgba(255, 255, 255, 0.2)";
        type.style.color = "white";
        type.style.borderColor = "rgba(255, 255, 255, 0.3)";
      }
      tags.forEach((tag) => {
        tag.style.backgroundColor = "rgba(255, 255, 255, 0.2)";
        tag.style.color = "white";
        tag.style.borderColor = "rgba(255, 255, 255, 0.3)";
      });

      selectedItem.scrollIntoView({ block: "nearest" });
    }
  }

  // Event Listeners
  document.getElementById("search-btn")?.addEventListener("click", openModal);
  closeBtn.addEventListener("click", closeModal);
  backdrop.addEventListener("click", closeModal);

  // Keyboard shortcuts
  document.addEventListener("keydown", (e) => {
    // Open with Cmd/Ctrl + K
    if ((e.metaKey || e.ctrlKey) && e.key === "k") {
      e.preventDefault();
      if (modal.classList.contains("open")) {
        closeModal();
      } else {
        openModal();
      }
    }

    // Close with Escape
    if (e.key === "Escape" && modal.classList.contains("open")) {
      closeModal();
    }
  });

  // Search input with debounce
  input.addEventListener("input", () => {
    debounce(() => performSearch(input.value), 300);
  });

  // Keyboard navigation
  input.addEventListener("keydown", (e) => {
    const items = resultsList.querySelectorAll(".result-item");

    if (e.key === "ArrowDown") {
      e.preventDefault();
      updateSelection(Math.min(selectedIndex + 1, items.length - 1));
    } else if (e.key === "ArrowUp") {
      e.preventDefault();
      updateSelection(Math.max(selectedIndex - 1, 0));
    } else if (e.key === "Enter" && selectedIndex >= 0) {
      e.preventDefault();
      const selectedItem = items[selectedIndex] as HTMLElement;
      const url = selectedItem.dataset.url;
      if (url) {
        navigateToResult(url, input.value);
      }
    }
  });

  // Click on result
  resultsList.addEventListener("click", (e) => {
    const item = (e.target as HTMLElement).closest(".result-item") as HTMLElement;
    if (item?.dataset.url) {
      navigateToResult(item.dataset.url, input.value);
    }
  });

  // Click on recent search
  recentList.addEventListener("click", (e) => {
    const item = (e.target as HTMLElement).closest(".recent-item");
    if (item) {
      const query = item.querySelector("span")?.textContent || "";
      input.value = query;
      performSearch(query);
    }
  });

  // Clear recent searches
  clearRecentBtn.addEventListener("click", () => {
    clearRecentSearches();
    recentSearches.classList.add("hidden");
  });

  // Filter buttons
  filterBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      filterBtns.forEach((b) => b.classList.remove("active"));
      btn.classList.add("active");
      currentFilter = (btn as HTMLElement).dataset.filter as "all" | "blog" | "project";
      if (input.value.trim()) {
        performSearch(input.value);
      }
    });
  });
</script>

<style>
  @reference "tailwindcss";

  .search-modal {
    position: fixed;
    inset: 0;
    z-index: 100;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 10vh;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.2s ease,
      visibility 0.2s ease;
  }

  .search-modal.open {
    opacity: 1;
    visibility: visible;
  }

  .search-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
  }

  .search-container {
    position: relative;
    width: 100%;
    max-width: 600px;
    max-height: 70vh;
    margin: 0 1rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    display: flex;
    flex-direction: column;
    transform: scale(0.95) translateY(-10px);
    transition: transform 0.2s ease;
  }

  .search-modal.open .search-container {
    transform: scale(1) translateY(0);
  }

  .search-header {
    display: flex;
    align-items: center;
    padding: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .search-input-wrapper {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .search-icon {
    color: var(--color-muted);
    flex-shrink: 0;
  }

  .search-input {
    flex: 1;
    background: transparent;
    border: none;
    outline: none;
    font-size: 1rem;
    color: var(--color-text);
  }

  .search-input::placeholder {
    color: var(--color-muted);
  }

  .search-kbd {
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    font-family: inherit;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    color: var(--color-muted);
  }

  .search-close {
    margin-left: 0.5rem;
    padding: 0.5rem;
    color: var(--color-muted);
    border-radius: 6px;
    transition:
      background-color 0.2s,
      color 0.2s;
  }

  .search-close:hover {
    background: var(--color-bg);
    color: var(--color-text);
  }

  .search-filters {
    display: flex;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .filter-btn {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
    color: var(--color-muted);
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    transition: all 0.2s;
  }

  .filter-btn:hover {
    background: var(--color-bg);
    color: var(--color-text);
  }

  .filter-btn.active {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
  }

  .search-results {
    flex: 1;
    overflow-y: auto;
    padding: 0.5rem;
    min-height: 200px;
  }

  /* Recent Searches */
  .recent-searches.hidden {
    display: none;
  }

  .recent-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0.75rem;
  }

  .recent-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .clear-recent {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    color: var(--color-muted);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    transition:
      color 0.2s,
      background-color 0.2s;
  }

  .clear-recent:hover {
    color: #ef4444;
    background: rgba(239, 68, 68, 0.1);
  }

  .recent-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .recent-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    color: var(--color-text);
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }

  .recent-item:hover {
    background: var(--color-bg);
    border-color: var(--color-border);
  }

  .recent-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg);
    border-radius: 8px;
    color: var(--color-muted);
    flex-shrink: 0;
  }

  .recent-query {
    flex: 1;
    font-size: 0.9375rem;
    font-weight: 450;
  }

  .recent-arrow {
    color: var(--color-muted);
    opacity: 0;
    transition:
      opacity 0.2s,
      transform 0.2s;
  }

  .recent-item:hover .recent-arrow {
    opacity: 1;
    transform: translateX(2px);
  }

  /* Results */
  .results-list {
    list-style: none !important;
    padding: 0 !important;
    margin: 0 !important;
    display: flex !important;
    flex-direction: column !important;
    gap: 4px !important;
  }

  .result-item {
    display: flex !important;
    flex-direction: row !important;
    align-items: center !important;
    gap: 12px !important;
    padding: 12px !important;
    border-radius: 8px !important;
    cursor: pointer !important;
    transition: background-color 0.15s ease !important;
    background-color: transparent !important;
  }

  .result-item:hover {
    background-color: var(--color-bg) !important;
  }

  .result-item.selected {
